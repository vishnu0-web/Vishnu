#include <iostream>
using namespace std;
class Student {
 int roll;
 float marks;
public:
 void input() {
 cout << "Enter Roll No and Marks: ";
 cin >> roll >> marks;
 }
 void display() {
 cout << "Roll No: " << roll << ", Marks: " << marks << endl;
 }
};
int main() {
 Student s[3];
 for(int i=0;i<3;i++) s[i].input();
 for(int i=0;i<3;i++) s[i].display();
 return 0;
}
